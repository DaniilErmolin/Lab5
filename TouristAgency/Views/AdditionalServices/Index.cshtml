@model TouristAgency.ViewModel.AdditionalServiceViewModel

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Дополнительные услуги</h1>
@if (User.IsInRole("admin"))
{
    <p>
        <a asp-action="Create">Добавить улугу</a>
    </p>
}
<form asp-action="Index" method="post">
    <p>
        <input type="text" asp-for="@Model.Name" name="Name" placeholder="Поиск по названию">
        <input type="text" asp-for="@Model.Description" name="Description" placeholder="Поиск по описанию">
        <input type="number" step="any" asp-for="@Model.Price" name="Price" placeholder="Цена">
        <input type="submit" value="Применить фильтр">
    </p>
</form>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalServices.FirstOrDefault().Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalServices.FirstOrDefault().Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdditionalServices.FirstOrDefault().Price)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.AdditionalServices) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Price)
            </td>
                @if (User.IsInRole("admin"))
                {
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id">Редактировать</a>
                        <a asp-action="Details" asp-route-id="@item.Id">Подробности</a>
                        <a asp-action="Delete" asp-route-id="@item.Id">Удалить</a>
                    </td>
                }
                else
                {
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id">Подробности</a>
                    </td>
                }
                
        </tr>
        }
    </tbody>
</table>
<page-link page-model="Model.Page" page-action="Index"></page-link>
